{
	"parserOptions": {
		"ecmaVersion": 2017
	},
	"extends": "eslint:recommended",
	"rules": {
		"no-console": 1,
		"no-unused-vars": 2,
		"radix": [2, "always"],
		"block-scoped-var": 0,
		"no-redeclare": 0,
		"consistent-return": 2,
		"curly": 2,
		"no-return-assign": 2,
		"no-void": 2,
		"no-with": 2,
		"no-shadow": 2,
		"indent": ["error", "tab", { "ignoreComments": true }],
		"no-multiple-empty-lines": ["error", { "max": 1}],
		"keyword-spacing": 2,
		"space-before-blocks": 2
	},
	"globals": {
	},
	"env": {
		"node": true,
		"es6": true,
		"mocha": true
	},
	"root": true
}
